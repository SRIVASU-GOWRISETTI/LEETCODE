IDEA----->CREATE A DUMMY NODE FOR HANDLING ALL CORNER CASES.
class Solution {
public:
    ListNode* removeElements(ListNode* head, int val) {
        ListNode* dummy=new ListNode();
        dummy->next=head;
        ListNode* temp=dummy;
        while(temp->next!=NULL){
            
            if(temp->next->val==val){
                temp->next=temp->next->next;
                
            }
            else{
                temp=temp->next;
            }
            
            
        }
        return dummy->next;
        }
};
